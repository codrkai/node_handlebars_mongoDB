        <div class="info">
            <h1>{{data.title}}</h1>
            <br><br>
            {{{data.desc}}}
            <br><br>
            <p>Released in {{data.yearReleased}}</p>
            <p>Filmed in {{data.filmLocation}}</p>
            <p>Genre: {{data.genre.name}}</p>
        </div>
    </div>
</div>